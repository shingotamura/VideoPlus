
<ul class='list-unstyled horizontal-lists'>
  <% users.each do |user| %>
   <li class='media'>
     <div class='container'>
       <div class='row'>
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
              <div class="card-index">
                   <div class="card-header">
                    <h3 class="card-title text-center">
                       <%= link_to user.name,profiles_user_path(user) %>
                    </h3> 
                   </div>
                 <div class="card-body id='user_image">
                     <% if user.img? %>
                       <%= image_tag user.img.to_s,class:'img-fluid',src:'' %>
                     <% else %>
                       <image src="/assets/default.png" class="icon-index" alt="ユーザーアイコン">
                     <% end%>
                 </div>
               </div>
           </div>
     </div>
   </li>
  <% end %>
</ul>