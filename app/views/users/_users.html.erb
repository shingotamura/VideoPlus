
<ul class='list-unstyled horizontal-lists'>
  <% users.each do |user| %>
   <li class='media'>
     <div class='container'>
       <div class='row'>
         <div class='col-xs-6 col-sm-4 col-md-3'>
           <div class='card border-bottom border-top'>
             <%= image_tag user.img.to_s,class:'img-fluid',src:'' %>
             <div class='card-body m-0 p-0 border-top text-center'>
               <%= user.name %>
               <%= link_to 'profile', user_path(user) %>
               </table>
             </div>
           </div>
         </div>
       </div>
     </div>
   </li>
  <% end %>
</ul>